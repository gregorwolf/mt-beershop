{
  "name": "mt-beershop",
  "version": "1.0.0",
  "description": "CAP Multitenancy Beershop",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^14"
  },
  "dependencies": {
    "@sap-cloud-sdk/core": "^1.54.0",
    "@sap/cds": "^5.9.0",
    "@sap/cds-mtx": "^2.5.3",
    "@sap/cds-odata-v2-adapter-proxy": "^1.8.11",
    "@sap/hana-client": "^2.12.20",
    "@sap/hdi-deploy": "^4.3.0",
    "@sap/instance-manager": "^3.3.2",
    "@sap/xsenv": "^3.2.1",
    "@sap/xssec": "^3.2.13",
    "cfenv": "^1.2.4",
    "express": "^4.17.3",
    "passport": "^0.5.2"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "watch": "cds build && cds watch",
    "build": "mbt build",
    "deploy": "cf deploy mta_archives/mt-beershop_1.0.1.mtar",
    "deploy:srv": "cf deploy mta_archives/mt-beershop_1.0.1.mtar -m mt-beershop-srv",
    "deploy:html5": "cf deploy mta_archives/mt-beershop_1.0.1.mtar -m mt-beershop-html5-deployer",
    "deploy:ui": "cf deploy mta_archives/mt-beershop_1.0.1.mtar -m mt-beershop-ui",
    "undeploy": "cf undeploy mt-beershop --delete-service-keys --delete-services --delete-service-brokers"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "auth": {
        "kind": "basic-auth",
        "users": {
          "admin": {
            "roles": [
              "$XSAPPNAME.mtcallback",
              "$XSAPPNAME.mtdeployment",
              "$XSAPPNAME.MtxDiagnose"
            ],
            "tenant": "anonymous"
          }
        }
      },
      "[production]": {
        "auth": {
          "kind": "jwt-auth"
        },
        "uaa": {
          "kind": "xsuaa"
        }
      },
      "db": {
        "kind": "hana",
        "vcap": {
          "label": "service-manager"
        }
      },
      "multitenancy": true,
      "cfapi": {
        "kind": "rest",
        "credentials": {
          "destination": "CFAPI"
        },
        "destinationOptions": {
          "selectionStrategy": "alwaysProvider"
        }
      },
      "EPM_REF_APPS_PROD_MAN_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/EPM_REF_APPS_PROD_MAN_SRV",
        "credentials": {
          "destination": "S4HANA",
          "path": "/sap/opu/odata/sap/EPM_REF_APPS_PROD_MAN_SRV",
          "requestTimeout": 30000
        },
        "destinationOptions": {
          "selectionStrategy": "alwaysSubscriber"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "mtx": {
      "element-prefix": "Z_",
      "namespace-blocklist": [
        "com.sap.",
        "sap."
      ],
      "dependencies": []
    }
  }
}
